    "sourceMap": true,
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "noImplicitAny": false, // Good start with false, and add types over time
    "moduleResolution": "node",
    // "lib": ["es2018"],
    "module": "commonjs",
    "target": "es2018",
    "baseUrl": ".",
    // "paths": {
    //   "*": ["node_modules/*", "src/types/*"]
    // },
    //"typeRoots": ["node_modules/@types", "src/types"],
    "outDir": "./dist",
  },
  "include": ["./src/**/*", "./scripts/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}