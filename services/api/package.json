{
  "name": "bedrock-api",
  "version": "0.0.1",
  "license": "MIT",
  "engines": {
    "node": ">=12"
  },
  "pre-commit": [
    "lint"
  ],
  "scripts": {
    "start": "nodemon -w src --exec \"MOCK_EMAIL=true NODE_ENV=dev node ./built/src/index.js\"",
    "copyfiles": "cp -r ./src/v1/__openapi__ ./built/src/v1/__openapi__ && cp -r ./fixtures ./built/ && cp -r ./src/v1/__tests__/fixtures ./built/src/v1/__tests__/ && mkdir -p ./built/emails/dist && cp -r ./emails/dist ./built/emails/",
    "build": "tsc",
    "postbuild": "yarn copyfiles",
    "dev": "MOCK_EMAIL=true NODE_ENV=dev ts-node-dev src/index.ts",
    "prod": "yarn build && node ./built/src/index.js",
    "start:production": "node src/index",
    "docs": "node scripts/generate-openapi",
    "emails": "node emails/build",
    "lint": "eslint src",
    "test": "jest src",
    "test:built": "jest built",
    "test:watch": "jest --watch -i"
  },
  "dependencies": {
    "@bedrockio/config": "^1.0.2",
    "@google-cloud/storage": "^5.1.2",
    "@google-cloud/trace-agent": "^5.1.0",
    "@hapi/joi": "^17.1.1",
    "@koa/cors": "^3.1.0",
    "@koa/router": "^9.3.1",
    "@sentry/node": "^5.20.1",
    "bcrypt": "^5.0.0",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.13.0",
    "koa-body": "^4.2.0",
    "koa-logger": "^3.2.1",
    "lodash": "^4.17.19",
    "mongoose": "^5.9.26",
    "mongoose-autopopulate": "^0.12.2",
    "postmark": "^2.5.4",
    "snyk": "^1.359.1"
  },
  "devDependencies": {
    "@types/jest": "^26.0.9",
    "@types/koa": "^2.11.3",
    "@types/mongoose": "^5.7.36",
    "@types/node": "^14.0.27",
    "@yeongjet/joi-to-json-schema": "^1.0.4",
    "eslint": "^7.5.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-jest": "^23.19.0",
    "jest": "^26.1.0",
    "juice": "^7.0.0",
    "mongodb-memory-server": "^6.6.3",
    "nodemon": "^2.0.4",
    "pre-commit": "^1.2.2",
    "prettier": "^2.0.5",
    "prettier-eslint": "^11.0.0",
    "supertest": "^4.0.2",
    "ts-jest": "^26.1.4",
    "ts-node": "^8.10.2",
    "ts-node-dev": "^1.0.0-pre.56"
  },
  "volta": {
    "node": "12.18.3",
    "yarn": "1.22.4"
  }
}
